<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/ui_widget_undobar"
	style="@style/GTS.Widget.Undobar"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/row_height"
	android:clickable="true"
	android:descendantFocusability="blocksDescendants"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:gravity="center_vertical"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/ui_widget_undobar_message"
		style="@style/GTS.Widget.Undobar.Message"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:text="@string/blank"/>

	<TextView
		android:id="@+id/ui_widget_undobar_icon"
		style="@style/GTS.Widget.Undobar.Icon"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center_vertical"
		android:text="@string/undo"/>

</LinearLayout>
